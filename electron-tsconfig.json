
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "build/main",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/main/**/*", "src/shared/**/*"]
}
