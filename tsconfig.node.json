{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist/main",
    "baseUrl": "./src"
  },
  "include": ["src/main/**/*.ts", "src/shared/**/*.ts", "electron-*.js", "vite.config.ts"]
}