    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist/main",
    "rootDir": "src"
  },
  "include": ["src/main/**/*.ts", "src/shared/**/*.ts"]
}
