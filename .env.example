# Application Configuration
NODE_ENV=development
DEBUG=false

# LLM API Keys (for cloud LLM integration)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database
DATABASE_URL=file:./database/ai_character_council.db

# Auto-updater - GitHub (for electron-updater)
GH_TOKEN=your_github_token_here

# Code Signing & Notarization - Apple
APPLE_ID=your_apple_id@example.com
APPLE_ID_PASSWORD=your_app_specific_password
APPLE_TEAM_ID=your_team_id
APPLE_API_KEY_ID=your_api_key_id
APPLE_API_ISSUER=your_api_key_issuer_id

# Code Signing - Windows
WIN_CSC_LINK=path_or_base64_of_windows_pfx_file
WIN_CSC_KEY_PASSWORD=your_certificate_password

# Code Signing - macOS
CSC_LINK=path_or_base64_of_macos_p12_file
CSC_KEY_PASSWORD=your_certificate_password